Emacs.FontBackend: xft
Emacs.geometry:    133x36

! ### rxvt-unicode ###
! for this to work you need to install:
! emerge x11-terms/rxvt-unicode
! (use-flags: 256-color focused-urgency font-styles mousewheel
!  perl pixbuf unicode3 vanilla xft)
! emerge x11-misc/urxvt-perls
! emerge x11-misc/xclip
! emerge  x11-misc/xdg-utils

urxvt*cursorUnderline:   1
urxvt*letterspace:       -5
urxvt*cursorBlink:       true
urxvt*scrollBar:         false
urxvt*depth:             32
urxvt*internalBorder:    5
urxvt.urgentOnBell:      true
urxvt.font:              xft:Andale Mono:size=11
urxvt.geometry:          96x29

Xft.antialias:           1
Xft.autohint:            0
Xft.dpi:                 96
Xft.hinting:             1
Xft.hintstyle:           hintfull
Xft.lcdfilter:           lcddefault
Xft.rgba:                rgb
!urxvt*.transparent: true
!urxvt*.shading: 20
!urxvt*fading: 10
!urxvt*fadeColor: #000000

xclock*majorColor:      #9a875f
xclock*minorColor:      #9a875f
xclock*minuteColor:     #9a875f
xclock*hourColor:       #9a875f
xclock*secondColor:     #9a875f

!## Extension
URxvt.perl-ext-common:  default,selection-to-clipboard,matcher,tabbed,font-size

!## Clickable URLs
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  1

!## Simple tabs
! tabs use:

    ! Shift+ ↓ new tab
    ! Shift+ ← go to left tab
    ! Shift+ → go to right tab
    ! Ctrl+ ← move tab to the left
    ! Ctrl+ → move tab to the right
    ! Ctrl+D: close tab

!## Cut and Paste
!## emerge x11-misc/urxvt-perls
URxvt.keysym.S-Up:     perl:font-size:increase
URxvt.keysym.S-Down:   perl:font-size:decrease

!## Colors
! http://dotshare.it/category/terms/colors/
urxvt*background:      #181512
urxvt*foreground:      #bea492
urxvt*cursorColor:     #93a1a1

