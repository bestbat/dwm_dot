Emacs.FontBackend: xft
Emacs.geometry:    133x36

! ### rxvt-unicode ###
! xrdb -all ~/.Xdefaults
! for this to work you need to install:
! emerge x11-terms/rxvt-unicode
! (use-flags: 256-color focused-urgency font-styles mousewheel
!  perl pixbuf unicode3 vanilla xft)
! emerge x11-misc/urxvt-perls x11-misc/xclip x11-misc/xdg-utils x11-misc/urxvt-font-size

urxvt*cursorUnderline:   1
urxvt*letterspace:       -5
urxvt*cursorBlink:       true
urxvt*scrollBar:         false
urxvt*depth:             32
urxvt*internalBorder:    5
urxvt.urgentOnBell:      true
urxvt.font:              xft:Andale Mono:size=11
urxvt.geometry:          96x29

Xft.antialias:           1
Xft.autohint:            0
Xft.dpi:                 96
Xft.hinting:             1
Xft.hintstyle:           hintfull
Xft.lcdfilter:           lcddefault
Xft.rgba:                rgb
urxvt*.transparent: true
urxvt*.shading: 10
urxvt*fading: 40
!urxvt*fadeColor: #000000

xclock*majorColor:      #9a875f
xclock*minorColor:      #9a875f
xclock*minuteColor:     #9a875f
xclock*hourColor:       #9a875f
xclock*secondColor:     #9a875f

!## Extension
URxvt.perl-ext-common:  default,selection-to-clipboard,matcher,tabbed,font-size

!## Clickable URLs
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  1

!## Simple tabs
! tabs use:

    ! Shift+ ↓ new tab
    ! Shift+ ← go to left tab
    ! Shift+ → go to right tab
    ! Ctrl+ ← move tab to the left
    ! Ctrl+ → move tab to the right
    ! Ctrl+D: close tab

! font size on the fly
URxvt.font-size.step:  4
URxvt.keysym.C-0:     perl:font-size:increase
URxvt.keysym.C-9:     perl:font-size:decrease
URxvt.keysym.C-S-0:   perl:font-size:incglobal
URxvt.keysym.C-S-9:   perl:font-size:decglobal

!/* Simplicity colors */

*background: #1F1F22
*foreground: #F3F3F3
*cursorColor: #F3F3F3

!black
*color0:  #333333
*color8:  #333333

!red
*color1:  #BF5C56
*color9:  #BF5C56

!green
*color2:  #97B19C
*color10: #97B19C

!yellow
*color3:  #D7BD8A
*color11: #D7BD8A

!blue
*color4:  #545F72
*color12: #545f72

!magenta
*color5:  #DD949A
*color13: #DD949A

!cyan
*color6:  #BE926B
*color14: #BE926B

!white
